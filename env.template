# Frontend Environment Configuration Template
# Copy this file to .env and configure for your environment

# Backend API Configuration
# The base URL where your backend API is deployed
# Examples:
# - Local development: http://localhost:3000
# - Azure Web Apps: https://your-app-name.azurewebsites.net
# - Custom domain: https://api.yourdomain.com
BACKEND_API_URL=http://localhost:3000

# Environment Detection
# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# API Settings
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_DEVELOPMENT_TOOLS=true
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_REPORTING=false

# CORS Configuration
# Frontend origin URLs (comma-separated for multiple origins)
FRONTEND_ORIGINS=http://localhost:8080,http://localhost:3000

# Cache Settings
ENABLE_FRONTEND_CACHING=true
CACHE_DURATION=300000
MAX_CACHE_SIZE=50

# Performance Settings
ENABLE_LAZY_LOADING=true
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_PRELOADING=true
ITEMS_PER_PAGE=12

# Development Settings
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=true
ENABLE_DEVTOOLS=true

# Error Handling
ENABLE_ERROR_BOUNDARIES=true
ENABLE_RETRY_MECHANISMS=true
MAX_RETRY_ATTEMPTS=3

# Analytics and Monitoring (Optional)
# GOOGLE_ANALYTICS_ID=your_ga_id
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

# Build Configuration
BUILD_TARGET=development
ASSET_PREFIX=
PUBLIC_URL=

# Deployment Configuration
# DEPLOYMENT_URL=https://your-frontend-domain.com
# CDN_URL=https://cdn.yourdomain.com
