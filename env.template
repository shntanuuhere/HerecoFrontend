# Frontend Environment Configuration Template
# Copy this file to .env and update the values for your deployment

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API URL - Update this with your Azure Web App URL
# Example: https://your-app-name.azurewebsites.net
# For local development: http://localhost:3000
BACKEND_API_URL=https://hereco-backend.azurewebsites.net

# API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode (development, production, staging)
NODE_ENV=production

# Debug logging (true/false)
DEBUG_MODE=false

# Development tools (true/false)
DEV_TOOLS=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Enable CORS debugging (true/false)
CORS_DEBUG=false

# Allowed origins for CORS (comma-separated)
# Example: https://your-frontend-domain.com,https://localhost:3000
CORS_ORIGINS=https://your-frontend-domain.com

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable caching (true/false)
ENABLE_CACHING=true

# Cache duration in milliseconds
CACHE_DURATION=300000

# Enable lazy loading (true/false)
ENABLE_LAZY_LOADING=true

# =============================================================================
# AZURE WEB APP SPECIFIC SETTINGS
# =============================================================================

# Azure Web App name (for health checks)
AZURE_WEB_APP_NAME=your-app-name

# Azure region (optional)
AZURE_REGION=eastus

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Local development backend URL (overrides BACKEND_API_URL in development)
LOCAL_BACKEND_URL=http://localhost:3000

# Enable local development mode (true/false)
LOCAL_DEV_MODE=false

# =============================================================================
# API ENDPOINTS CONFIGURATION
# =============================================================================

# Health check endpoint
HEALTH_ENDPOINT=/api/health

# Podcast episodes endpoint
PODCAST_ENDPOINT=/api/podcast/episodes

# Files endpoint
FILES_ENDPOINT=/api/files

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Show detailed error messages (true/false)
SHOW_DETAILED_ERRORS=false

# Enable error reporting (true/false)
ENABLE_ERROR_REPORTING=true

# =============================================================================
# CONFIGURATION NOTES
# =============================================================================

# 1. Update BACKEND_API_URL with your actual Azure Web App URL
# 2. Update CORS_ORIGINS with your frontend domain(s)
# 3. Set NODE_ENV to 'production' for live deployments
# 4. Enable DEBUG_MODE only for troubleshooting
# 5. Configure LOCAL_DEV_MODE for local development
# 6. Update AZURE_WEB_APP_NAME with your actual app name
